{% extends 'base.html.twig' %}

{% block title %}{{ trick.name }} - Details{% endblock %}

{% block body %}
<div class="container mt-4">

    <!-- Trick Header with Background Image -->
    <div class="trick-header position-relative">
        {% if trick.illustrations|length > 0 %}
            <div class="header-bg" style="background-image: url('data:image/jpeg;base64,{{ trick.illustrations[0].getBase64Image() }}');"></div>
        {% else %}
            <div class="header-bg" style="background-image: url('{{ asset('images/placeholder.jpg') }}');"></div>
        {% endif %}
        <h1 class="trick-title text-center">{{ trick.name }}</h1>
    </div>

    <!-- Trick Details -->
    <div class="card mt-4 p-4 shadow">
        <p><strong>Description:</strong> {{ trick.description }}</p>
        <p><strong>Groupe:</strong> {{ trick.groupName }}</p>
        <p><strong>Créé le:</strong> {{ trick.createdAt|date('d/m/Y H:i') }}</p>
    </div>

    <!-- Media Gallery -->
    <div class="media-gallery d-flex flex-wrap justify-content-center mt-3">
        {% for illustration in trick.illustrations %}
            {% if loop.index > 1 %} {# Skip first image since it's in the header #}
                <img src="data:image/jpeg;base64,{{ illustration.getBase64Image() }}" class="media-item img-thumbnail mx-2" />
            {% endif %}
        {% endfor %}

        {% for video in trick.videos %}
            <div class="media-item embed-responsive embed-responsive-16by9 mx-2">
                <iframe src="{{ video.embedCode }}" frameborder="0" allowfullscreen></iframe>
            </div>
        {% endfor %}
    </div>

    <!-- Future Comment Section -->
    <div class="mt-4">
        <h4>Commentaires</h4>
        <p class="text-muted">Les commentaires seront ajoutés plus tard.</p>
    </div>

    <!-- Back Button -->
    <div class="mt-4">
        <a href="{{ path('home') }}" class="btn btn-primary">⬅ Retour à l'accueil</a>
    </div>
</div>

<style>
/* Trick Header */
.trick-header {
    position: relative;
    width: 100%;
    height: 250px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.header-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    filter: brightness(0.5);
    z-index: 1;
}

.trick-title {
    position: relative;
    color: white;
    font-size: 2rem;
    font-weight: bold;
    z-index: 2;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
}

/* Media Gallery */
.media-gallery {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
}

.media-item {
    width: 300px;
    height: 200px;
    object-fit: cover;
}

.media-item iframe {
    width: 100%;
    height: 100%;
}
</style>

{% endblock %}
