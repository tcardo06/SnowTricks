{% extends 'base.html.twig' %}

{% block title %}{{ trick.name }} - Details{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="text-center">{{ trick.name }}</h1>

        <!-- Edit/Delete Buttons (Visible only if the user is the trick creator) -->
{#         {% if app.user and app.user == trick.creator %}
            <div>
                <a href="{{ path('trick_edit', { 'slug': trick.slug }) }}" class="btn btn-sm btn-warning">
