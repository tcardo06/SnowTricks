{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body_class %}centered-body{% endblock %}

{% block body %}
<div class="container-fluid d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-5" style="width: 100%; max-width: 450px; border-radius: 15px;">
        <h1 class="text-center mb-3">Réinitialisation du mot de passe</h1>
        <p class="text-center text-muted mb-4">
            Entrez votre nouveau mot de passe ci-dessous.
        </p>
        <form method="post">
            <div class="mb-3">
                <input type="password" name="password" class="form-control" placeholder="Nouveau mot de passe" required>
            </div>
            <button class="btn btn-primary w-100" type="submit">Mettre à jour</button>
        </form>
    </div>
</div>
{% endblock %}
