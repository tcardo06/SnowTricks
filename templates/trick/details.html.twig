    </div>

    <!-- Images Gallery -->
    <div class="d-flex flex-wrap justify-content-center mt-3">
        {% for illustration in trick.illustrations %}
            <img src="data:image/jpeg;base64,{{ illustration.getBase64Image() }}" class="img-thumbnail mx-2" width="150" height="100" />
        {% else %}
            <img src="{{ asset('images/placeholder.jpg') }}" class="img-thumbnail mx-2" width="150" height="100" />
        {% endfor %}
    </div>

    <!-- Videos Gallery -->
    <div class="d-flex flex-wrap justify-content-center mt-3">
        {% for video in trick.videos %}
            <div class="embed-responsive embed-responsive-16by9 mx-2" style="width: 200px; height: 150px;">
                {{ video.embedCode|raw }}
            </div>
        {% endfor %}
    </div>

    <!-- Trick Details -->
    <div class="card mt-4 p-4 shadow">
        <p><strong>Description:</strong> {{ trick.description }}</p>
        <p><strong>Groupe:</strong> {{ trick.groupName }}</p>
        <p><strong>Cr√©√© le:</strong> {{ trick.createdAt|date('d/m/Y H:i') }}</p>
    </div>

    <!-- Future Comment Section -->
    <div class="mt-4">
        <h4>Commentaires</h4>
        <p class="text-muted">Les commentaires seront ajout√©s plus tard.</p>
    </div>

    <!-- Back Button -->
    <div class="mt-4">
        <a href="{{ path('home') }}" class="btn btn-primary">‚¨Ö Retour √† l'accueil</a>
    </div>
</div>
{% endblock %}
