{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Home{% endblock %}

{% block body %}
<h1 class="text-center my-4">Welcome to SnowTricks!</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
    {% for trick in tricks %}
        <div class="col">
            <div class="card">
                <img src="{{ asset('images/placeholder.jpg') }}" class="card-img-top" alt="{{ trick.name }}">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="{{ path('trick_details', { slug: trick.slug }) }}">{{ trick.name }}</a>
                    </h5>
                    <div class="card-icons">
                        <i class="bi bi-pencil-fill" title="Edit"></i>
                        <i class="bi bi-trash-fill" title="Delete"></i>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

<div class="text-center mt-4">
    <button id="load-more" class="btn btn-primary">Load More</button>
</div>
{% endblock %}
