{% extends 'base.html.twig' %}

{% block title %}{{ trick.name }} - Details{% endblock %}

{% block body %}
<div class="container mt-4">

    <!-- Banner Image (First Image or Placeholder) -->
    <div class="trick-banner position-relative" style="background: url({% if trick.illustrations|length > 0 %}data:image/jpeg;base64,{{ trick.illustrations[0].getBase64Image() }}{% else %}{{ asset('images/placeholder.jpg') }}{% endif %}) no-repeat center center; background-size: cover; height: 300px; display: flex; align-items: center; justify-content: center;">
        
        <h1 class="text-white text-center bg-dark bg-opacity-50 px-4 py-2 rounded">{{ trick.name }}</h1>

        <!-- Buttons for Edit/Delete on First Image -->
        {% if trick.illustrations|length > 0 %}
            <div class="position-absolute top-0 end-0 p-2">
                <a href="#" class="btn btn-sm btn-warning me-1">✏️ Modifier</a>
                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteImageModal">
                    ❌ Supprimer
                </button>
            </div>
        {% endif %}
    </div>

    <!-- Trick Details -->
    <div class="card mt-4 p-4 shadow">
        <p><strong>Description:</strong> {{ trick.description }}</p>
        <p><strong>Groupe:</strong> {{ trick.groupName }}</p>
        <p><strong>Créé le:</strong> {{ trick.createdAt|date('d/m/Y H:i') }}</p>
    </div>

    <!-- Media Gallery (Images + Videos) -->
    <div class="media-gallery d-flex flex-wrap justify-content-center mt-3">
        {% for illustration in trick.illustrations %}
            {% if loop.index > 1 %} {# Skip first image since it's in the header #}
                <div class="position-relative mx-2">
                    <img src="data:image/jpeg;base64,{{ illustration.getBase64Image() }}" class="media-item img-thumbnail" />
                    <!-- Small delete button -->
                    <button type="button" class="btn btn-danger btn-sm delete-image-btn position-absolute top-0 end-0" data-bs-toggle="modal" data-bs-target="#deleteImageModal{{ illustration.id }}">❌</button>
                </div>

                <!-- Delete Confirmation Modal for each image -->
                <div class="modal fade" id="deleteImageModal{{ illustration.id }}" tabindex="-1" aria-labelledby="deleteImageModalLabel{{ illustration.id }}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteImageModalLabel{{ illustration.id }}">Confirmer la suppression</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Êtes-vous sûr de vouloir supprimer cette image ? Cette action est irréversible.
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                <a href="{{ path('trick_delete_image', { 'trick_slug': trick.slug, 'image_id': illustration.id }) }}" class="btn btn-danger">Supprimer</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}

        {% for video in trick.videos %}
            <div class="media-item embed-responsive embed-responsive-16by9 mx-2">
                <iframe src="{{ video.embedCode }}" frameborder="0" allowfullscreen></iframe>
            </div>
        {% endfor %}
    </div>

    <!-- Future Comment Section -->
    <div class="mt-4">
        <h4>Commentaires</h4>
        <p class="text-muted">Les commentaires seront ajoutés plus tard.</p>
    </div>

    <!-- Back Button -->
    <div class="mt-4">
        <a href="{{ path('home') }}" class="btn btn-primary">⬅ Retour à l'accueil</a>
    </div>
</div>

<!-- Delete Confirmation Modal for the First Image -->
{% if trick.illustrations|length > 0 %}
    <div class="modal fade" id="deleteImageModal" tabindex="-1" aria-labelledby="deleteImageModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteImageModalLabel">Confirmer la suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Êtes-vous sûr de vouloir supprimer cette image ? Cette action est irréversible.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <a href="{{ path('trick_delete_image', { 'trick_slug': trick.slug, 'image_id': trick.illustrations|first.id }) }}" class="btn btn-danger">Supprimer</a>
                </div>
            </div>
        </div>
    </div>
{% endif %}

<style>
/* Trick Header */
.trick-header {
    position: relative;
    width: 100%;
    height: 250px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.header-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    filter: brightness(0.5);
    z-index: 1;
}

.trick-banner {
    position: relative;
    background-size: cover;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.trick-banner h1 {
    text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
}

.trick-title {
    position: relative;
    color: white;
    font-size: 2rem;
    font-weight: bold;
    z-index: 2;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
}

/* Media Gallery */
.media-gallery {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
}

.media-item {
    width: 300px;
    height: 200px;
    object-fit: cover;
    position: relative;
}

.media-item iframe {
    width: 100%;
    height: 100%;
}

/* Small Delete Button on Images */
.delete-image-btn {
    width: 30px;
    height: 30px;
    font-size: 0.8rem;
    padding: 2px;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}
</style>

{% endblock %}
