{% extends 'base.html.twig' %}

{% block title %}{{ trick.name }} - Details{% endblock %}

{% block body %}
<div class="container mt-4">

    <!-- Banner Image (First Image or Placeholder) -->
    <div class="trick-banner position-relative" style="background: url({% if trick.illustrations|length > 0 %}data:image/jpeg;base64,{{ trick.illustrations[0].getBase64Image() }}{% else %}{{ asset('images/placeholder.jpg') }}{% endif %}) no-repeat center center; background-size: cover; height: 300px; display: flex; align-items: center; justify-content: center;">
        
        <h1 class="text-white text-center bg-dark bg-opacity-50 px-4 py-2 rounded">{{ trick.name }}</h1>

        <!-- Buttons for Edit/Delete on First Image (Only for Logged-in Users) -->
        {% if is_granted('IS_AUTHENTICATED_FULLY') and trick.illustrations|length > 0 %}
            <div class="position-absolute top-0 end-0 p-2 d-flex">
                <!-- Edit Banner Image -->
                <label for="editBannerImage" class="btn btn-sm btn-warning me-1">✏️ Modifier</label>
                <input type="file" id="editBannerImage" class="d-none" data-image-id="{{ trick.illustrations|first.id }}" data-trick-slug="{{ trick.slug }}">

                <!-- Delete Banner Image -->
                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteBannerImageModal">
                    ❌ Supprimer
                </button>
            </div>
        {% endif %}
    </div>

    <!-- Trick Details -->
    <div class="card mt-4 p-4 shadow">
        <p><strong>Description:</strong> {{ trick.description }}</p>
        <p><strong>Groupe:</strong> {{ trick.groupName }}</p>
        <p><strong>Créé le:</strong> {{ trick.createdAt|date('d/m/Y H:i') }}</p>
    </div>

    <!-- Media Gallery (Images + Videos) -->
    <div class="media-gallery d-flex flex-wrap justify-content-center mt-3">
        {% for illustration in trick.illustrations %}
            {% if loop.index > 1 %} {# Skip first image since it's in the header #}
                <div class="position-relative mx-2">
                    <img src="data:image/jpeg;base64,{{ illustration.getBase64Image() }}" class="media-item img-thumbnail" />
                    
                    <!-- Edit & Delete Buttons (Only for Logged-in Users) -->
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <div class="position-absolute top-0 end-0 p-1 d-flex">
                            <!-- Edit Image -->
                            <label for="editImage{{ illustration.id }}" class="btn btn-warning btn-sm me-1">✏️</label>
                            <input type="file" id="editImage{{ illustration.id }}" class="d-none" data-image-id="{{ illustration.id }}" data-trick-slug="{{ trick.slug }}">

                            <!-- Delete Image -->
                            <button type="button" class="btn btn-danger btn-sm delete-media-btn" data-bs-toggle="modal" data-bs-target="#deleteImageModal{{ illustration.id }}">❌</button>
                        </div>
                    {% endif %}
                </div>

                <!-- Delete Confirmation Modal for each image -->
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="modal fade" id="deleteImageModal{{ illustration.id }}" tabindex="-1" aria-labelledby="deleteImageModalLabel{{ illustration.id }}" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteImageModalLabel{{ illustration.id }}">Confirmer la suppression</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Êtes-vous sûr de vouloir supprimer cette image ? Cette action est irréversible.
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                    <a href="{{ path('trick_delete_image', { 'trick_slug': trick.slug, 'image_id': illustration.id }) }}" class="btn btn-danger">Supprimer</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        {% endfor %}
    </div>

    <!-- Future Comment Section -->
    <div class="mt-4">
        <h4>Commentaires</h4>
        <p class="text-muted">Les commentaires seront ajoutés plus tard.</p>
    </div>

    {% if is_granted('IS_AUTHENTICATED_FULLY') and app.user == trick.creator %}
    <div class="mt-4 text-end">
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteTrickModal">
            Supprimer la figure
        </button>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteTrickModal" tabindex="-1" aria-labelledby="deleteTrickModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteTrickModalLabel">Confirmer la suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Êtes-vous sûr de vouloir supprimer la figure "<strong>{{ trick.name }}</strong>" ? Cette action est irréversible.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <a href="{{ path('trick_delete', { slug: trick.slug }) }}" class="btn btn-danger">Supprimer</a>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

<!-- JavaScript for Handling Image Upload -->
<script>
document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('input[type="file"]').forEach(input => {
        input.addEventListener('change', function () {
            if (this.files.length > 0) {
                let imageId = this.getAttribute('data-image-id');
                let trickSlug = this.getAttribute('data-trick-slug');
                let formData = new FormData();
                formData.append('image', this.files[0]);

                fetch(`/trick/${trickSlug}/edit-image/${imageId}`, {
                    method: 'POST',
                    body: formData
                }).then(response => response.json())
                  .then(data => {
                      if (data.success) {
                          location.reload(); // Reload page to show updated image
                      } else {
                          alert('Erreur: ' + data.message);
                      }
                  }).catch(error => console.error('Error:', error));
            }
        });
    });
});
</script>



<style>
/* Trick Header */
.trick-banner {
    position: relative;
    background-size: cover;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.trick-banner h1 {
    text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
}

/* Media Gallery */
.media-gallery {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
}

.media-item {
    width: 300px;
    height: 200px;
    object-fit: cover;
    position: relative;
}

.media-item iframe {
    width: 100%;
    height: 100%;
}

/* Small Delete Button on Images & Videos */
.delete-media-btn {
    width: 30px;
    height: 30px;
    font-size: 0.8rem;
    padding: 2px;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}
</style>

{% endblock %}
